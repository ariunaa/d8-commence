{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    'embed-responsive', 'embed-responsive-16by9'
  ]
%}
{%
  set title_classes = [
    'field--label',
    label_display == 'visually_hidden' ? 'sr-only',
  ]
%}

{% if label_hidden %}
  {% if multiple %}
    <div{{ attributes.addClass(classes, 'field--items') }}>
      {% for item in items %}
        <div{{ item.attributes.addClass('field--item') }}><iframe class="embed-responsive-item" allowfullscreen="" frameborder="0" height="315" src="https://www.youtube.com/embed/{{item.content}}" width="560"></iframe></div>
      {% endfor %}
    </div>
  {% else %}
    {% for item in items %}
      <div{{ attributes.addClass(classes, 'field--item') }}>
          <iframe class="embed-responsive-item" allowfullscreen="" frameborder="0" height="315" src="https://www.youtube.com/embed/{{item.content}}" width="560"></iframe>
      </div>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes.addClass(classes) }}>
    <div{{ title_attributes.addClass(title_classes) }}>{{ label }}</div>
    {% if multiple %}
      <div class="field__items">
    {% endif %}
    {% for item in items %}
      <div{{ item.attributes.addClass('field--item') }}><iframe class="embed-responsive-item" allowfullscreen="" frameborder="0" height="315" src="https://www.youtube.com/embed/{{item.content}}" width="560"></iframe></div>
    {% endfor %}
    {% if multiple %}
      </div>
    {% endif %}
  </div>
{% endif %}
